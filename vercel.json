{
  "buildCommand": "cd apps/frontend && pnpm prisma generate && pnpm run build",
  "outputDirectory": "apps/frontend/.next",
  "framework": "nextjs",
  "installCommand": "pnpm install --filter luneo-frontend... --no-frozen-lockfile --ignore-scripts",
  "ignoreCommand": "git log -1 --pretty=format:'%an' | grep -q 'dependabot' && exit 0 || exit 1",
  "headers": [
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "CDN-Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.luneo.app/api/:path*"
    }
  ]
}
