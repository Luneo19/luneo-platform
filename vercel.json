{
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm install -g pnpm@8 && pnpm install --frozen-lockfile || pnpm install --no-frozen-lockfile",
  "buildCommand": "cd apps/frontend && npx prisma generate && pnpm run build",
  "outputDirectory": "apps/frontend/.next",
  "env": {
    "SKIP_INSTALL_HOOKS": "true"
  },
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.luneo.app/api/:path*"
    }
  ]
}
