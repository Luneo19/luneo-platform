{
  "buildCommand": "cd apps/frontend && echo '=== Starting build ===' && ls -la && pnpm run build 2>&1 || (echo '=== Build failed ===' && exit 1)",
  "outputDirectory": "apps/frontend/.next",
  "framework": "nextjs",
  "installCommand": "pnpm install --ignore-scripts && cd apps/frontend && npx prisma generate",
  "headers": [
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "CDN-Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.luneo.app/api/:path*"
    }
  ]
}
