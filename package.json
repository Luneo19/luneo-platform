{
  "name": "luneo-enterprise-saas",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@8.10.0",
  "description": "Luneo Enterprise SaaS - Plateforme IA de personnalisation de produits",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev:frontend": "cd apps/frontend && pnpm run dev",
    "dev:backend": "cd apps/backend && pnpm run start:dev",
    "dev:all": "echo '⚠️  ATTENTION: lance TOUT le monorepo (~8 Go RAM minimum). Ctrl+C pour annuler.' && sleep 3 && turbo run dev --concurrency=15",
    "lint": "turbo run lint",
    "lint:release": "pnpm --filter luneo-frontend lint:check && pnpm --filter @luneo/backend lint:critical",
    "test": "turbo run test",
    "test:release": "pnpm --filter luneo-frontend exec vitest run src/app/__tests__/sitemap-canonical.test.ts src/lib/api/__tests__/admin-forward-headers.test.ts",
    "type-check": "turbo run type-check",
    "type-check:release": "pnpm --filter luneo-frontend type-check && pnpm --filter @luneo/backend type-check",
    "build:release": "pnpm --filter luneo-frontend build && pnpm --filter @luneo/backend build",
    "quality:release": "pnpm run lint:release && pnpm run type-check:release && pnpm run test:release && pnpm run build:release",
    "quality:platform": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run build",
    "smoke:critical": "node scripts/smoke/critical-smoke.mjs",
    "clean": "turbo run clean",
    "deploy": "turbo run deploy",
    "setup": "node scripts/setup.js"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "turbo": "^1.10.12",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": "22.x",
    "pnpm": ">=8.x"
  }
}
