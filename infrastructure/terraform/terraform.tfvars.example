# ========================================
# CONFIGURATION OBLIGATOIRE
# ========================================

# Token Hetzner Cloud (OBLIGATOIRE)
# Obtenez-le depuis : https://console.hetzner.cloud/projects
hetzner_token = "your-hetzner-cloud-token-here"

# Domaine principal de l'application
domain = "api.luneo.app"

# Environnement de dÃ©ploiement
environment = "prod" # ou "staging" ou "dev"

# ========================================
# MOTS DE PASSE (OBLIGATOIRES)
# ========================================

# Mot de passe PostgreSQL (minimum 16 caractÃ¨res)
postgres_password = "your-secure-postgres-password-here"

# Mot de passe Redis (minimum 8 caractÃ¨res)
redis_password = "your-secure-redis-password-here"

# ========================================
# CONFIGURATION INFRASTRUCTURE
# ========================================

# RÃ©gion Hetzner (recommandÃ©: nbg1 pour l'Europe)
region = "nbg1"

# Types d'instances
instance_type        = "cpx31"  # 4 vCPU, 8GB RAM pour API
worker_instance_type = "cpx41"  # 8 vCPU, 16GB RAM pour workers AI
render_instance_type = "cpx51"  # 16 vCPU, 32GB RAM pour rendu 3D

# ========================================
# SÃ‰CURITÃ‰
# ========================================

# IPs autorisÃ©es pour SSH (RESTREIGNEZ EN PRODUCTION!)
allowed_ssh_ips = [
  "0.0.0.0/0"  # âš ï¸ Ã€ changer pour vos IPs spÃ©cifiques
]

# Configuration SSH
enable_ssh_key = true
ssh_key_name   = "luneo-deploy-key"

# ========================================
# RÃ‰SEAUX PRIVÃ‰S
# ========================================

# CIDR du rÃ©seau privÃ© principal
private_network_cidr = "10.0.0.0/16"

# Sous-rÃ©seaux (gÃ©nÃ©ralement pas besoin de changer)
api_subnet_cidr    = "10.0.1.0/24"
worker_subnet_cidr = "10.0.2.0/24"
db_subnet_cidr     = "10.0.3.0/24"

# ========================================
# STOCKAGE
# ========================================

# Tailles des volumes persistants
postgres_volume_size = 100  # 100GB pour PostgreSQL
redis_volume_size    = 20   # 20GB pour Redis

# ========================================
# MONITORING & LOGS
# ========================================

# Monitoring
enable_monitoring = true
enable_logging    = true
log_retention_days = 30

# ========================================
# SAUVEGARDES
# ========================================

# Configuration des sauvegardes
enable_backups         = true
backup_retention_days  = 30
backup_schedule        = "0 2 * * *"  # Tous les jours Ã  2h

# ========================================
# SCALING
# ========================================

# Configuration du scaling
min_api_instances   = 2
max_api_instances   = 5
enable_auto_scaling = false  # Ã€ activer aprÃ¨s mise en place des mÃ©triques

# ========================================
# APPLICATION
# ========================================

# Configuration de l'application
app_port              = 3001
health_check_path     = "/health"
health_check_interval = 15

# ========================================
# TAGS & MÃ‰TADONNÃ‰ES
# ========================================

# Tags pour l'organisation
project_name  = "luneo"
owner_email   = "admin@luneo.app"
cost_center   = "engineering"

# ========================================
# FONCTIONNALITÃ‰S
# ========================================

# Feature flags
enable_ar_features      = false  # FonctionnalitÃ©s AR/3D
enable_ai_features      = true   # FonctionnalitÃ©s IA
enable_webhook_features = true   # Webhooks
enable_sso_features     = false  # SSO (Ã  activer si nÃ©cessaire)

