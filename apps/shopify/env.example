# -----------------------------------------------------------------------------
# LUNEO SHOPIFY APP â€“ ENVIRONMENT VARIABLES
# -----------------------------------------------------------------------------
# Copy to `.env.local` for development. Mix of server-side (NestJS) and
# client-side (App Bridge) variables.
# -----------------------------------------------------------------------------

# --- Core Server -------------------------------------------------------------
NODE_ENV=development
PORT=3002
LOG_LEVEL=info

# --- Shopify App Credentials -------------------------------------------------
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders
SHOPIFY_APP_URL=http://localhost:3002
SHOPIFY_REDIRECT_URL=http://localhost:3002/auth/callback
SHOPIFY_WEBHOOK_SECRET=
SHOPIFY_API_VERSION=2023-10

# --- Embedded App Bridge (exposed to browser) -------------------------------
NEXT_PUBLIC_SHOPIFY_API_KEY=
NEXT_PUBLIC_SHOPIFY_SHOP_ORIGIN=

# --- Database & Cache -------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/luneo_shopify
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=luneo_shopify

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2

# --- JWT --------------------------------------------------------------------
JWT_SECRET=luneo-shopify-jwt-secret
JWT_EXPIRES_IN=7d

# --- Luneo Platform Integration ---------------------------------------------
LUNEO_API_URL=http://localhost:3000/api/v1
LUNEO_API_KEY=
LUNEO_WEBHOOK_SECRET=
FRONTEND_URL=http://localhost:3000
FRONTEND_API_URL=http://localhost:3000/api

# --- Observability & Rate Limiting -----------------------------------------
SENTRY_DSN=
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100



