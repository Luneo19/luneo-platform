# ============================================
# LUNEO V2 â€” Backend Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# --- Database (PostgreSQL - Required) ---
DATABASE_URL=postgresql://user:password@localhost:5432/luneo_v2

# --- Redis (Required for cache, rate limiting, queues) ---
REDIS_URL=redis://localhost:6379

# --- JWT Authentication (Required - min 32 characters each) ---
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-at-least-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# --- App Configuration ---
NODE_ENV=development
PORT=3001
API_PREFIX=/api/v1
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# --- Security ---
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# --- AI Providers (at least OpenAI required) ---
OPENAI_API_KEY=sk-...

# --- Vector Database ---
# PINECONE_API_KEY=...
# PINECONE_INDEX=luneo-production

# --- Stripe (Required for billing) ---
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# --- Email ---
SENDGRID_API_KEY=SG...
FROM_EMAIL=no-reply@luneo.app

# --- Storage ---
CLOUDINARY_CLOUD_NAME=...
CLOUDINARY_API_KEY=...
CLOUDINARY_API_SECRET=...
