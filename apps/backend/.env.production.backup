# Application
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1

# Database - À configurer avec votre base de données production
DATABASE_URL="postgresql://user:password@your-production-db-host:5432/luneo_production?schema=public&sslmode=require"

# Redis - À configurer avec votre Redis production
REDIS_URL=redis://your-production-redis-host:6379

# JWT - GÉNÉRER DES CLÉS SÉCURISÉES
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-at-least-64-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-very-long-and-secure-refresh-secret-key-at-least-64-characters-long
JWT_REFRESH_EXPIRES_IN=7d

# OAuth - À configurer avec vos vraies clés
GOOGLE_CLIENT_ID=your-real-google-client-id
GOOGLE_CLIENT_SECRET=your-real-google-client-secret
GOOGLE_CALLBACK_URL=https://your-domain.com/api/v1/auth/google/callback

GITHUB_CLIENT_ID=your-real-github-client-id
GITHUB_CLIENT_SECRET=your-real-github-client-secret
GITHUB_CALLBACK_URL=https://your-domain.com/api/v1/auth/github/callback

# Stripe - À configurer avec vos vraies clés production
STRIPE_SECRET_KEY=sk_live_your-real-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-real-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_live_your-real-stripe-publishable-key

# Cloudinary - À configurer avec vos vraies clés
CLOUDINARY_CLOUD_NAME=your-real-cloud-name
CLOUDINARY_API_KEY=your-real-api-key
CLOUDINARY_API_SECRET=your-real-api-secret

# AI Providers - À configurer avec vos vraies clés
OPENAI_API_KEY=sk-your-real-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-real-anthropic-api-key
REPLICATE_API_KEY=r8_your-real-replicate-api-key

# Email - À configurer avec votre SMTP production
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-production-email@your-domain.com
SMTP_PASS=your-production-email-password
SMTP_FROM=noreply@your-domain.com

# Monitoring - À configurer avec votre Sentry production
SENTRY_DSN=https://your-real-sentry-dsn@sentry.io/123456
SENTRY_ENVIRONMENT=production

# Rate Limiting - Activer pour la production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_WINDOW_MS=900000
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500

# CORS - Configurer avec vos domaines production
CORS_ORIGIN=https://your-frontend-domain.com,https://your-admin-domain.com

# Security
BCRYPT_ROUNDS=12
