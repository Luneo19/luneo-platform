{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "coverage",
    ".vercel",
    "scripts"
  ],
  "include": [
    "src/**/*",
    "api/**/*"
  ]
}
