# ============================================
# LUNEO PLATFORM - BACKEND PRODUCTION ENV VARS
# Copy to .env and fill with real values
# ============================================

# --- CRITICAL (required) ---
NODE_ENV=production
PORT=3001
DATABASE_URL=postgresql://user:password@host:5432/luneo_production?sslmode=require
REDIS_URL=redis://default:password@host:6379

# JWT Authentication (min 32 characters each)
JWT_SECRET=your-production-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-production-refresh-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (64 hex characters for AES-256-GCM)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# --- STRIPE (required for billing) ---
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_STARTER_MONTHLY=price_xxxxx
STRIPE_PRICE_STARTER_YEARLY=price_xxxxx
STRIPE_PRICE_PRO_MONTHLY=price_xxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxx
STRIPE_PRICE_BUSINESS_MONTHLY=price_xxxxx
STRIPE_PRICE_BUSINESS_YEARLY=price_xxxxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxxxx

# --- URLS ---
FRONTEND_URL=https://luneo.app
BACKEND_URL=https://api.luneo.app
CORS_ORIGINS=https://luneo.app,https://www.luneo.app

# --- EMAIL (SendGrid) ---
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
SENDGRID_DOMAIN=luneo.app
SENDGRID_FROM_NAME=Luneo
SENDGRID_FROM_EMAIL=no-reply@luneo.app
SENDGRID_REPLY_TO=support@luneo.app

# --- MONITORING ---
SENTRY_DSN=https://xxxx@xxxx.ingest.sentry.io/xxxx

# --- STORAGE (Cloudinary) ---
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# --- AI PROVIDERS ---
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx
MISTRAL_API_KEY=xxxxxxxxxxxxxxxxxxxx
STABILITY_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
MESHY_API_KEY=xxxxxxxxxxxxxxxxxxxx

# --- OAUTH ---
GOOGLE_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxx
GITHUB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx

# --- ADMIN SETUP ---
SETUP_SECRET_KEY=your-very-secure-setup-key-for-initial-admin

# --- OPTIONAL ---
