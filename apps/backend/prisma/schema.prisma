model Partner {
  id                    String        @id @default(cuid())
  userId                String
  user                  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyName           String
  website               String?
  status                PartnerStatus @default(PENDING)
  commissionRate        Float         @default(0)
  totalReferrals        Int           @default(0)
  totalCommissionEarned Float         @default(0)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  referrals PartnerReferral[]

  @@index([userId])
  @@index([status])
  @@map("partners")
}

model PartnerReferral {
  id             String                @id @default(cuid())
  partnerId      String
  partner        Partner               @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization          @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  status         PartnerReferralStatus @default(TRIAL)
  monthlyValue   Float                 @default(0)
  commissionPaid Float                 @default(0)
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt

  @@unique([partnerId, organizationId])
  @@index([organizationId])
  @@index([status])
  @@map("partner_referrals")
}

model IdempotencyKey {
  key       String   @id
  result    String?  @db.Text
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([expiresAt])
  @@map("idempotency_keys")
}

