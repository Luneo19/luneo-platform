{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "reporters": [
    "html",
    "clear-text",
    "progress",
    "dashboard"
  ],
  "testRunner": "jest",
  "testRunnerNodeArgs": ["--max-old-space-size=4096"],
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.e2e-spec.ts",
    "!src/**/*.test.ts",
    "!src/**/*.d.ts",
    "!src/main.ts",
    "!src/app.module.ts"
  ],
  "mutator": {
    "plugins": [
      "typescript"
    ],
    "excludedMutations": [
      "StringLiteral",
      "BooleanLiteral"
    ]
  },
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,
  "timeoutMS": 60000,
  "logLevel": "info",
  "plugins": [
    "@stryker-mutator/jest-runner",
    "@stryker-mutator/typescript-checker"
  ],
  "jest": {
    "configFile": "jest.config.js"
  },
  "dashboard": {
    "reportType": "full"
  },
  "thresholds": {
    "high": 80,
    "low": 70,
    "break": 70
  }
}
