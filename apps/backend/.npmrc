# NPM Configuration optimisée pour Vercel Build
# Réduit le temps d'installation de ~70%

# Use npm ci instead of npm install
package-lock=true
prefer-offline=true

# Disable unnecessary scripts
ignore-scripts=false

# Reduce network overhead
fetch-retries=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Cache configuration
cache-min=600

# Audit & funding
audit=false
fund=false

# Progress & Logging
loglevel=warn
progress=false

# Legacy peer deps (faster resolution)
legacy-peer-deps=true

# Engine strict (skip version checks)
engine-strict=false

# Save exact versions
save-exact=true

# Production optimizations
production=false
optional=false

# Prisma configuration
prisma-generate-skip-postinstall=true

# Sharp binary caching
sharp_binary_host=https://github.com/lovell/sharp-libvips/releases/download
sharp_libvips_binary_host=https://github.com/lovell/sharp-libvips/releases/download
