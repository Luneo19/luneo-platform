# =============================================================================
# LUNEO BACKEND — STAGING ENVIRONMENT
# =============================================================================
# Copy to .env.staging and fill in actual values.
# This environment mirrors production but uses test/sandbox credentials.
# =============================================================================

# Application
NODE_ENV=staging
PORT=3001
API_PREFIX=/api/v1
FRONTEND_URL=https://staging.luneo.app
NEXT_PUBLIC_APP_URL=https://staging.luneo.app

# Database (use a separate staging database, NOT production)
DATABASE_URL="postgresql://user:password@staging-db-host:5432/luneo_staging?schema=public"

# Redis
REDIS_URL=redis://staging-redis-host:6379

# JWT (use DIFFERENT secrets than production)
JWT_SECRET=staging-jwt-secret-min-32-chars-replace-me
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=staging-refresh-secret-min-32-chars-replace-me
JWT_REFRESH_EXPIRES_IN=7d

# OAuth (use staging/test OAuth apps)
GOOGLE_CLIENT_ID=staging-google-client-id
GOOGLE_CLIENT_SECRET=staging-google-client-secret
GOOGLE_CALLBACK_URL=https://api-staging.luneo.app/api/v1/auth/google/callback

GITHUB_CLIENT_ID=staging-github-client-id
GITHUB_CLIENT_SECRET=staging-github-client-secret
GITHUB_CALLBACK_URL=https://api-staging.luneo.app/api/v1/auth/github/callback

# Stripe (use TEST mode keys — sk_test_xxx / pk_test_xxx)
STRIPE_SECRET_KEY=sk_test_staging_key
STRIPE_WEBHOOK_SECRET=whsec_staging_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_staging_key

# Stripe Price IDs (test mode)
STRIPE_PRICE_STARTER_MONTHLY=price_test_starter_monthly
STRIPE_PRICE_STARTER_YEARLY=price_test_starter_yearly
STRIPE_PRICE_PRO_MONTHLY=price_test_pro_monthly
STRIPE_PRICE_PRO_YEARLY=price_test_pro_yearly
STRIPE_PRICE_BUSINESS_MONTHLY=price_test_business_monthly
STRIPE_PRICE_BUSINESS_YEARLY=price_test_business_yearly
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_test_enterprise_monthly
STRIPE_PRICE_ENTERPRISE_YEARLY=price_test_enterprise_yearly

# Cloudinary (can share with production or use a staging folder)
CLOUDINARY_CLOUD_NAME=staging-cloud-name
CLOUDINARY_API_KEY=staging-api-key
CLOUDINARY_API_SECRET=staging-api-secret

# Email (use sandbox/test mode)
SENDGRID_API_KEY=SG.staging_key
EMAIL_FROM=noreply@staging.luneo.app

# Sentry (use a separate staging project or same DSN with environment tag)
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project

# OpenAI (use a staging API key with lower rate limits)
OPENAI_API_KEY=sk-staging-openai-key

# Logging
LOG_LEVEL=debug
